<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="OKP-メニュー"
            id="addAnnotationPlugin.commands.category">
      </category>
      <command
            name="xrayアノテーションの追加"
            categoryId="addAnnotationPlugin.commands.category"
            id="addAnnotationPlugin.commands.addAnnotationPluginCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="addAnnotationPlugin.commands.addAnnotationPluginCommand"
            class="addAnnotationPlugin.handlers.AddAnnotationPluginHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="addAnnotationPlugin.commands.addAnnotationPluginCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="OKP-メニュー"
               mnemonic="M"
               id="addAnnotationPlugin.menus.addAnnotationPluginMenu">
            <command
                  commandId="addAnnotationPlugin.commands.addAnnotationPluginCommand"
                  id="addAnnotationPlugin.menus.addAnnotationPluginCommand"
                  label="xrayアノテーションの追加"
                  mnemonic="S">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="addAnnotationPlugin.toolbars.addAnnotationPluginToolbar">
            <command
                  commandId="addAnnotationPlugin.commands.addAnnotationPluginCommand"
                  icon="icons/aws-x-ray.png"
                  tooltip="xrayで使用するアノテーションを追加。(ファイルを保存してから実行すること)"
                  id="addAnnotationPlugin.toolbars.addAnnotationPluginCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
